{% if view_mode == 'feature_panel' %}
  <a href="{% spaceless %}{{ content.field_media_oembed_video_1 }}{% endspaceless %}" class="feature-panel__video" data-minimodal-title="Placeholder" data-minimodal>
    <span class="material-symbols-outlined icon-fill">
      play_arrow
    </span>
  </a>
{% elseif view_mode == 'home' %}
  <a href="{% spaceless %}{{ content.field_media_oembed_video_1 }}{% endspaceless %}" class="feature-panel__video" data-minimodal-title="Placeholder" data-minimodal>
    <span class="material-symbols-outlined icon-fill">
      play_arrow
    </span>
  </a>
{% elseif view_mode == 'full_width' %}
  <div class="frame border-radius relative" data-ratio="3:2">
    {{ content.field_media_placeholder_image }}
    <div class="video__caption">
      <a class="button-arrow button-arrow--play button-arrow--white" href="https://www.youtube.com/watch?v=oklVBLlQs5k" data-minimodal="" data-minimodal-caption="{% spaceless %}{{ content.field_media_caption }}{% endspaceless %}">
        <span class="material-symbols-outlined" aria-hidden="true">
          play_arrow
        </span>
        Watch Video
      </a>
    </div>
  </div>
  {% if content.field_media_caption|render %}
    <p class="text-step-s font-bold">{{ content.field_media_caption }}</p>
  {% endif %}
{% elseif view_mode == 'full_width_feature' %}
  <a class="button-arrow button-arrow--white button-arrow--play absolute z-10 bottom-xs left-xs" href="{% spaceless %}{{ content.field_media_oembed_video_1 }}{% endspaceless %}" data-minimodal data-minimodal-caption="{% spaceless %}{{ content.field_media_caption }}{% endspaceless %}">
   <span class="material-symbols-outlined icon-fill" aria-hidden="true">
     play_arrow
   </span>
   Watch Video
  </a>
{% elseif view_mode == 'testimonial_home' %}
  <a href="{% spaceless %}{{ content.field_media_oembed_video_1 }}{% endspaceless %}" class="button-arrow button-arrow--play button-arrow--white" data-minimodal-caption="{% spaceless %}{{ content.field_media_caption }}{% endspaceless %}" data-minimodal>
    <span class="material-symbols-outlined">
      play_arrow
    </span>
    Watch Video
  </a>
{% elseif view_mode == 'testimonial_home_2' %}
  <a href="{% spaceless %}{{ content.field_media_oembed_video_1 }}{% endspaceless %}" class="button-arrow button-arrow--play button-arrow--white" data-minimodal-title="{% spaceless %}{{ content.field_media_caption }}{% endspaceless %}" data-minimodal>
    <span class="material-symbols-outlined">
      play_arrow
    </span>
    Watch Video
  </a>
{% else %}
  <a class="button-arrow button-arrow--blue-dark button-arrow--play absolute z-10 bottom-xs left-xs" href="{% spaceless %}{{ content.field_media_oembed_video_1 }}{% endspaceless %}" data-minimodal="" data-minimodal-caption="{% spaceless %}{{ content.field_media_caption }}{% endspaceless %}">
    <span class="material-symbols-outlined" aria-hidden="true">play_arrow</span>
    Watch Video
  </a>
{% endif %}
