{% if view_mode == 'home' %}
  <div class="pullquote__container">
    <div class="content__img content__img-alt">
      {{ content.field_image }}
      <div class="blue-gradient"></div>
      <div class="pullquote pullquote--blue">
        <blockquote>
          {{ content.field_quote }}
          {% if content.field_attribution|render %}
            <p class="pullquote__author">
               {{ content.field_attribution }}
            </p>
          {% endif %}
          {% if content.field_modal_video|render %}
            <a href="https://www.youtube.com/watch?v=oklVBLlQs5k" class="button-arrow button-arrow--play button-arrow--white" data-minimodal-title="Placeholder" data-minimodal>
              <span class="material-symbols-outlined">
                play_arrow
              </span>
              Watch Video
            </a>
          {% elseif content.field_testimonial_cta|render %}
            {{ content.field_testimonial_cta }}
          {% endif %}
        </blockquote>
      </div>
    </div>
  </div>
{% else %}
  <blockquote>
    {{ content.field_quote }}
  </blockquote>
  {% if content.field_attribution|render %}
    <cite>
       {{ content.field_attribution }}
    </cite>
  {% endif %}
{% endif %}
