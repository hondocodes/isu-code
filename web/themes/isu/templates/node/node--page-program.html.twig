{% if view_mode == 'related_program' %}
  <li class="routing-panel__block flow">
    <a href="{{ url }}" class="routing-panel__link flow flow-space-md">
      <div class="routing-panel__frame overlay-gradient-blue">
        {{ content.field_image }}
        <div class="routing-panel__box"></div>
      </div>
      <h3>{{ label }}</h3>
    </a>
    <div class="routing-panel__content flow-space-3xs">
      <p>
        {{ content.field_degree_type }}
      </p>
    </div>
  </li>
{% else %}
  {{ content.field_standard_modules }}
  {% if content.field_related_programs|render %}
    <div class="region bg-blue invert">
      <div class="routing-panel__container">
        {% if content.field_heading|render %}
          <h2 class="routing-panel__heading">{{ content.field_heading }}</h2>
        {% endif %}
        <ul class="routing-panel grid" data-layout="1/3">
          {{ content.field_related_programs }}
        </ul>
      </div>
    </div>
  {% endif %}
{% endif %}
