{% include '@isu/includes/header.html.twig' %}

{{ drupal_field('field_hero', 'node', (node.id ? node.id : node)) }}
<main id="main-content">


  {{ page.tabs }}
  {{ page.content }}

  {% if not node.field_related_programs.isempty %}
    <div class="region bg-blue invert">
      <div class="routing-panel__container">
        {% if not node.heading.isempty %}
          <h2 class="routing-panel__heading">{{ drupal_field('field_heading', 'node', (node.id ? node.id : node)) }}</h2>
        {% endif %}
        <ul class="routing-panel grid" data-layout="1/3">
          {{ drupal_field('field_related_programs', 'node', (node.id ? node.id : node)) }}
        </ul>
      </div>
    </div>
  {% endif %}
</main>
{{ page.footer }}





