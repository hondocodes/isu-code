{% include '@isu/includes/header.html.twig' %}
{{ drupal_field('field_hero', 'node', (node.id ? node.id : node)) }}
<main id="main-content">
  <div class="wrapper">
    <div class="l-page-sidebar mb-xl lg:my-l">
      <div>
        <div class="flow flow-space-l">
          <div data-animation="fade-in-up" data-animate>
            {{ page.sub_nav }}
          </div>
        </div>
        {% if not node.field_sidebar_modules.isempty %}
          <div class="hide flow flow-space-l lg:block">
            {{ drupal_field('field_sidebar_modules', 'node', (node.id ? node.id : node)) }}
          </div>
        {% endif %}
        {% if page.context_after_nav|render %}
          <div data-animation="fade-in-up" data-animate>
            {{ page.context_after_nav }}
          </div>
        {% endif %}
      </div>
      <div>
        <div class="flow relative">
          <div class="flow flow-space-2xl">
            {{ page.tabs }}
            {{ page.content }}
          </div>
        </div>
      </div>
      {% if page.context_after_main|render %}
        <div>
          <div class="flow relative">
            <div class="flow flow-space-2xl">
              {{ page.context_after_main }}
            </div>
          </div>
        </div>
      {% endif %}
      {% if not node.field_sidebar_modules.isempty %}
        <div class="mt-l lg:hidden">
          <div class="flow flow-space-l">
            {{ drupal_field('field_sidebar_modules', 'node', (node.id ? node.id : node)) }}
          </div>
        </div>
      {% endif %}
      {% if page.context_after_nav|render %}
        <div class="mt-l lg:hidden">
          <div class="flow flow-space-l">
            {{ page.context_after_nav }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
  {% if not node.field_related_programs.isempty %}
    <div class="region bg-blue invert">
      <div class="routing-panel__container">
        {% if not node.heading.isempty %}
          <h2 class="routing-panel__heading">{{ drupal_field('field_heading', 'node', (node.id ? node.id : node)) }}</h2>
        {% endif %}
        <ul class="routing-panel grid" data-layout="1/3">
          {{ drupal_field('field_related_programs', 'node', (node.id ? node.id : node)) }}
        </ul>
      </div>
    </div>
  {% endif %}
</main>
{{ page.footer }}
