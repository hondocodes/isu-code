{% if content.field_p_image|render %}
  <div class="hero hero--sub invert" style="background-image: url('{% spaceless %}{{ content.field_p_image }}{% endspaceless %}');">
    <div class="px-s xl:px-l">
      {{ drupal_breadcrumb() }}
    </div>
    <div class="wrapper">
      <div class="hero__container">
        <div class="lg:z-10 lg:flex lg:items-center lg:gap-xl">
          <div class="flow flow-space-2xl">
            <div class="flow lg:flex">
              <div class="flex flex-col justify-end">
                <h1 class="hero__headline" style="flex: 0;">
                  {{ content.field_p_h1 }}
                </h1>
                {% if content.field_p_intro_text|render %}
                  <div class="intro lg:w-75">
                    {{ content.field_p_intro_text }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% else %}
  <div>
    <h2 class="hero__headline">{{ content.field_p_h1 }}</h2>
    {% if content.field_p_intro_text|render %}
      <div class="intro">
        {{ content.field_p_intro_text }}
      </div>
    {% endif %}
  </div>
{% endif %}
