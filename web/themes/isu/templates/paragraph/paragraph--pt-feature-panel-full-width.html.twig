{% if content.field_p_background_color['#items'].getString() == 'light-blue' %}
  {% if field_p_remove_top_margin.value %}
    <div class="content__blue invert py-[75px]">
  {% else %}
    <div class="content__blue invert py-[75px] lg:mt-2xl">
  {% endif %}
{% else %}
  {% if field_p_remove_top_margin.value %}
    <div class="content__blue-dark bg-blue-dark invert py-[75px]">
  {% else %}
    <div class="content__blue-dark bg-blue-dark invert py-[75px] lg:mt-2xl">
  {% endif %}
{% endif %}
  <div class="wrapper">
    {% if content.field_p_image_position['#items'].getString() == 'right' %}
      <div class="feature-panel feature-panel--swap">
    {% else %}
      <div class="feature-panel">
    {% endif %}
      {{ content.field_p_feature }}
    </div>
  </div>
</div>
