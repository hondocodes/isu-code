<div class="flow flow-space-l">
  {% if content.field_p_heading|render %}
    {% if content.field_p_heading_tag['#items'].getString() == 'H2' %}
      <h2 class="h3" data-animation="fade-in-up" data-animate>{{ content.field_p_heading }}</h2>
    {% elseif content.field_p_heading_tag['#items'].getString() == 'H3' %}
      <h3 class="h3" data-animation="fade-in-up" data-animate>{{ content.field_p_heading }}</h3>
    {% elseif content.field_p_heading_tag['#items'].getString() == 'H4' %}
      <h4 class="h3" data-animation="fade-in-up" data-animate>{{ content.field_p_heading }}</h4>
    {% elseif content.field_p_heading_tag['#items'].getString() == 'H5' %}
      <h5 class="h3" data-animation="fade-in-up" data-animate>{{ content.field_p_heading }}</h5>
    {% elseif content.field_p_heading_tag['#items'].getString() == 'H6' %}
      <h6 class="h3" data-animation="fade-in-up" data-animate>{{ content.field_p_heading }}</h6>
    {% else %}
      <p class="h3" data-animation="fade-in-up" data-animate>{{ content.field_p_heading }}</p>
    {% endif %}
  {% endif %}
  <div class="flow flow-space-l bordered">
    {{ content.field_p_post_listings_block }}
  </div>
</div>
