{% import "@isu/macros/macros.html.twig" as macros %}
{% if view_mode == 'home' %}
  <div class="image-carousel">
    {{ content.field_p_images }}
    <div class="image-carousel__nav">
      <button class="image-carousel__nav__btn image-carousel__previous" aria-label="Previous Slide">
        {{ macros.inline_svg('icon-arrow') }}
      </button>
      <button class="image-carousel__nav__btn image-carousel__next" aria-label="Next Slide">
        {{ macros.inline_svg('icon-arrow') }}
      </button>
    </div>
  </div>
{% elseif view_mode == 'full_width' %}
  <div class="region bg-white">
    <div class="wrapper">
      <div class="image-carousel__container">
        <div class="image-carousel">
          {{ content.field_p_images }}
          <div class="image-carousel__nav">
            <button class="image-carousel__nav__btn image-carousel__previous" aria-label="Previous Slide">
              {{ macros.inline_svg('icon-arrow') }}
            </button>
            <button class="image-carousel__nav__btn image-carousel__next" aria-label="Next Slide">
              {{ macros.inline_svg('icon-arrow') }}
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
{% elseif view_mode == 'full_width_program' %}
  <div class="wrapper">
  <div class="flex justify-center">
  <div class="lg:w-75 flow flow-space-xl my-xl">
    <div class="flow flow-space-s">{{ content.field_p_is_intro_text }}</div>
  <div class="image-carousel__container">
    <div class="image-carousel">
      {{ content.field_p_images }}
      <div class="image-carousel__nav">
        <button class="image-carousel__nav__btn image-carousel__previous" aria-label="Previous Slide">
          {{ macros.inline_svg('icon-arrow') }}
        </button>
        <button class="image-carousel__nav__btn image-carousel__next" aria-label="Next Slide">
          {{ macros.inline_svg('icon-arrow') }}
        </button>
      </div>
    </div>
  </div>
    <div class="flow flow-space-s">
    {{ content.field_p_is_outro_text }}
    <br>
    {% if content.field_field_p_is_cta|render  %}
    <a href="{{ content.field_field_p_is_cta.0['#url'] }}" class="button">{{ content.field_field_p_is_cta.0['#title'] }}</a>
    {% endif %}
    </div>
  </div>
  </div>
  </div>
{% else %}
  <div class="image-carousel__container">
    <div class="image-carousel">
      {{ content.field_p_images }}
      <div class="image-carousel__nav">
        <button class="image-carousel__nav__btn image-carousel__previous" aria-label="Previous Slide">
          {{ macros.inline_svg('icon-arrow') }}
        </button>
        <button class="image-carousel__nav__btn image-carousel__next" aria-label="Next Slide">
          {{ macros.inline_svg('icon-arrow') }}
        </button>
      </div>
    </div>
  </div>
{% endif %}
